{% extends 'base.html.twig' %}

{% block title %}Détail photo{% endblock %}

{% block body %}
    <h1 class="text-center m-5">Détails de photo {{ picture.title }}</h1>

    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ picture.title }}</td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td>{{ picture.place }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ picture.date ? picture.date|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ picture.description }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td><img
                        src="{{ asset('uploads/' ~ picture.photo) }}" class="photoShow" />
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_picture_index') }}" class="btn btn-outline-success">Retour à la liste</a>
        <br>
        {% if app.user %}
            <a href="{{ path('app_picture_edit', {'id': picture.id}) }}" class="btn btn-outline-primary mt-2">Modifier</a>

            {{ include('picture/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
