{% extends 'base.html.twig' %}

{% block title %}Liste des pêches{% endblock %}

{% block body %}
{{ include('_navbar.html.twig') }}

<h1 class="text-center m-5">Listes des pêches</h1>

<section class="container mb-5">
    {% if maxFishing %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('fishing_paginer', {'page': currentPage + 1}) }}" class="btn mt-3">
            <i class="fa-solid fa-chevron-right" title="Page suivante"></i>
        </a>
    {% endif %}
    {% if currentPage > 1 %}
        <a href="{{ path('fishing_paginer', {'page': currentPage - 1}) }}" class="btn mt-3">
            <i class="fa-solid fa-chevron-left" title="Page précédente"></i>
        </a>
    {% endif %}
    </div>

    <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th>Variété de poisson</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Leurre</th>
                <th>Météo</th>
                <th>Appât</th>
                {% if app.user %}
                <th></th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for fishing in fishings %}
            <tr>
                <td>{{ fishing.fishRace }}</td>
                <td>{{ fishing.date ? fishing.date|date('d-m-Y') : '' }}</td>
                <td>{{ fishing.place }}</td>
                <td>{{ fishing.lure }}</td>
                <td>{{ fishing.weather }}</td>
                <td>{{ fishing.bait }}</td>
                {% if app.user %}
                <td>
                    <a href="{{ path('app_fishing_show', {'id': fishing.id}) }}" title="Voir"><i class="fa-solid fa-folder-open"></i></a>
                    <a href="{{ path('app_fishing_edit', {'id': fishing.id}) }}" title="Modifier"><i class="fa-solid fa-pen"></i></a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune pêche enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user %}
        <a href="{{ path('app_fishing_new') }}" class="btn btn-outline-primary">Ajouter une nouvelle pêche</a>
    {% endif %}
</section>
{% endblock %}
