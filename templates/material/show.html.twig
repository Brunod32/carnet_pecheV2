{% extends 'base.html.twig' %}

{% block title %}Détails du matériel{% endblock %}

{% block body %}
    <h1 class="text-center m-5">Détails du matériel</h1>

    <div class="container">
        <table class="table">
            <tbody>
                {# <tr>
                    <th>Id</th>
                    <td>{{ material.id }}</td>
                </tr> #}
                <tr>
                    <th>Name</th>
                    <td>{{ material.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ material.picture }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ material.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_material_index') }}" class="btn btn-outline-success">Retour à la liste</a>
        <br>
        {% if app.user %}
            <a href="{{ path('app_material_edit', {'id': material.id}) }}" class="btn btn-outline-primary mt-2">Modifier</a>

            {{ include('material/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
